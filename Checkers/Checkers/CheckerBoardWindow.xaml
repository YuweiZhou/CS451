<Window x:Class="Checkers.CheckerBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkers"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="True"
        Background="White"
        ResizeMode="NoResize"
        Title="CheckerBoardWindow" Height="350" Width="525">
    <Grid>
        <!--Connected to Text-->
        <TextBox x:Name="connectedToText" Background="Transparent" IsReadOnly="True"
             Text="Connected to:" Foreground="Black"  FontSize="15" FontFamily="Comic Sans MS" 
                 FontWeight="Bold" Margin="25,71,355,219" />
        <!--Connected player-->
        <TextBox x:Name="connectedPlayerName" Background="Transparent" IsReadOnly="True" Foreground="Black"  FontSize="15" FontFamily="Comic Sans MS" 
                 FontWeight="Bold" Margin="25,102,355,188" />


        <!--Turn to move-->
        <StackPanel Margin="25,154,313,104">
            <TextBox x:Name="turnToMoveText" Background="Transparent" IsReadOnly="True" Foreground="Black"  FontSize="15" FontFamily="Comic Sans MS" 
                 Text="It's your turn to move" FontWeight="Bold" />
            <Grid HorizontalAlignment="Left">
                <Ellipse Name="playerColorCircle" Width="15" Height="15" Stroke="Black"  StrokeThickness="1"/>
            </Grid>
        </StackPanel>

        <Grid Name="checkerBoardGrid" Height="240" Width="240" Margin="249,25,35,61">
        </Grid>

    </Grid>
</Window>
